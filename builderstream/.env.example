# ===========================================
# BuilderStream Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# Django Core
# -------------------------------------------
SECRET_KEY=change-me-to-a-long-random-string
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DJANGO_SETTINGS_MODULE=config.settings.development

# Database (PostgreSQL)
# -------------------------------------------
DB_NAME=builderstream
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost          # Use 'db' for Docker, 'localhost' for local dev
DB_PORT=5432

# Redis / Celery
# -------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0          # Use 'redis' for Docker host
CELERY_RESULT_BACKEND=redis://localhost:6379/0      # Use 'redis' for Docker host

# CORS (comma-separated origins)
# -------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# AWS S3 Storage
# -------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=builderstream-media
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=

# Stripe Billing
# -------------------------------------------
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email
# -------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@builderstream.com

# Logging
# -------------------------------------------
DJANGO_LOG_LEVEL=INFO
